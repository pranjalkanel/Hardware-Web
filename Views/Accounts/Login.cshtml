<div class="d-flex justify-content-center" style="padding-top:14%">
    <div class="w-50 shadow p-5 mb-5 bg-white rounded">
        <div class="d-flex flex-column">
            <div>
                <form method="post">
                    <h1 style="text-align:center">User Login</h1>

                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Email address" required autofocus />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn border-0 btn-block text-white" style="background-color: darkslateblue">
                        Login
                    </button>
                </form>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div>
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                </div>            
            }

        </div>
    </div>
</div>